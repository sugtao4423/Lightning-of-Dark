<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_refresh" />

    <TextView
        android:id="@+id/name_screenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/icon"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/icon"
        android:text="名前 - \@hoge"
        android:textColor="@color/tweetName"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tweetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_screenName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/name_screenName"
        android:text="本文"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tweet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tweetText"
        android:layout_below="@+id/tweetText"
        android:layout_marginTop="2sp"
        android:text="date"
        android:textColor="@color/tweetDate"
        android:textSize="11sp" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/RetweetedUserIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/tweet_date"
        android:layout_toRightOf="@+id/tweet_date" />

    <TextView
        android:id="@+id/RetweetedUserScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tweet_date"
        android:layout_alignBottom="@+id/tweet_date"
        android:layout_toRightOf="@+id/RetweetedUserIcon"
        android:textColor="@color/tweetRetweetedUserName"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/UserProtected"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/name_screenName"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/name_screenName"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_secure" />

    <HorizontalScrollView
        android:id="@+id/tweet_images_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tweet_date"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tweet_date"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:id="@+id/tweet_images_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>