<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserPage">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="click_banner"
        android:scaleType="fitStart"
        android:src="@raw/empty" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/UserIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="click_icon"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/UserScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="ScreenName"
        android:background="#f0f0f0f0" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#f0f0f0f0" />
    
    <android.support.v4.view.ViewPager
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/Userpager"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentLeft="true"
	android:layout_below="@+id/banner">
  <android.support.v4.view.PagerTabStrip
    android:id="@+id/userPagerTabStrip"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:paddingTop="2dp"
    android:background="#ececec"
    android:textColor="#33b5e5"/>
</android.support.v4.view.ViewPager>

</RelativeLayout>
