<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserPage">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="click_banner"
        android:scaleType="fitStart"
        android:src="@drawable/header_none" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/UserIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="click_icon"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/UserScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="ScreenName"
        android:background="#f0f0f0f0" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#f0f0f0f0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/banner"
        android:layout_marginLeft="10dp"
        android:text="bio"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/UserBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:autoLink="web" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UserBio"
        android:layout_below="@+id/UserBio"
        android:layout_marginTop="15dp"
        android:text="場所"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/location"
        android:layout_below="@+id/location"
        android:layout_marginTop="15dp"
        android:text="リンク"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="3dp"
        android:autoLink="web"
        android:text="TextView" />

</RelativeLayout>
