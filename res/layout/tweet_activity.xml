<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackgroundGray"
    tools:context=".TweetActivity" >

    <EditText
        android:id="@+id/tweetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tweetButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scrollViewForOriginStatus"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/moji140"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tweetClose"
        android:text="140"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/tweetText"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp" />

    <ImageButton
        android:id="@+id/tweetClose"
        style="@style/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:onClick="back" />

    <ImageButton
        android:id="@+id/tweetButton"
        style="@style/tweet_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageSelect"
        android:background="@color/transparent"
        android:onClick="tweet" />

    <ImageButton
        android:id="@+id/cursor_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:onClick="cursor_start"
        android:src="@drawable/cursor_start" />

    <ImageButton
        android:id="@+id/cursor_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cursor_start"
        android:background="@color/transparent"
        android:onClick="cursor_end"
        android:src="@drawable/cursor_end" />

    <ImageButton
        android:id="@+id/imageSelect"
        style="@style/pic_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/moji140"
        android:background="@color/transparent"
        android:onClick="image" />

    <TextView
        android:id="@+id/tweetAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cursor_start"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:text="TweetAccount" />

    <ImageButton
        android:id="@+id/tweetMic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tweetAccount"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/cursor_end"
        android:background="@color/transparent"
        android:onClick="mic"
        android:src="@drawable/mic" />

    <ScrollView
        android:id="@+id/scrollViewForOriginStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <sugtao4423.lod.tweetlistview.TweetListView
                android:id="@+id/originStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>