<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListViewListener" >

    <ListView
        android:id="@+id/dialog_List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/dialog_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="0dp"
    		android:minWidth="0dp"
    		android:padding="2dp"
            android:text="&#xf3e5;"
            android:background="@xml/dialog_background" />

        <Button
            android:id="@+id/dialog_retweet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="0dp"
    		android:minWidth="0dp"
    		android:padding="2dp"
            android:text="&#xf079;"
            android:background="@xml/dialog_background" />

        <Button
            android:id="@+id/dialog_unofficialRT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="0dp"
    		android:minWidth="0dp"
    		android:padding="2dp"
            android:text="&#xf10e;"
            android:background="@xml/dialog_background" />

        <Button
            android:id="@+id/dialog_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="0dp"
    		android:minWidth="0dp"
    		android:padding="2dp"
            android:text="&#xf005;"
            android:background="@xml/dialog_background" />

        <Button
            android:id="@+id/dialog_talk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="0dp"
    		android:minWidth="0dp"
    		android:padding="2dp"
            android:text="&#xf086;"
            android:background="@xml/dialog_background" />

        <Button
            android:id="@+id/dialog_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="0dp"
    		android:minWidth="0dp"
    		android:padding="2dp"
            android:text="&#xf2ed;"
            android:background="@xml/dialog_background" />
    </LinearLayout>

</LinearLayout>