<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="オプションメニュー" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="menu_openBrowser"
            android:title="ブラウザで開く" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="menu_regex"
            android:title="正規表現で抽出" />
    </PreferenceCategory>
    <PreferenceCategory android:title="その他" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="getBigIcon"
            android:summary="通信量が増えます"
            android:title="高解像度のアイコンを取得" />
        <CheckBoxPreference
            android:key="isWebm"
            android:summaryOff="mp4"
            android:summaryOn="webm"
            android:title="動画をwebmで取得する" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isVideoLoop"
            android:title="動画のループ再生" />

        <Preference
            android:key="ListSetting"
            android:title="リスト設定" />
    </PreferenceCategory>

</PreferenceScreen>