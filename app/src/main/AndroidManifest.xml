<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sugtao4423.lod" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name="sugtao4423.lod.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sugtao4423.lod.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="StartOAuth"
            android:configChanges="orientation|screenSize|screenLayout"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="localhost"
                    android:pathPattern="/sugtao4423.lod/oauth.*"
                    android:scheme="https" >
                </data>
            </intent-filter>
        </activity>
        <activity
            android:name="sugtao4423.lod.userpage_fragment.UserPage"
            android:configChanges="orientation|screenSize|screenLayout" >
        </activity>
        <activity
            android:name="TweetActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="IntentActivity"
            android:theme="@style/Theme.TranslucentBackground" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="twitter.com"
                    android:pathPattern="/..*"
                    android:scheme="http" >
                </data>
                <data
                    android:host="twitter.com"
                    android:pathPattern="/..*"
                    android:scheme="https" >
                </data>
                <data
                    android:host="mobile.twitter.com"
                    android:pathPattern="/..*"
                    android:scheme="http" >
                </data>
                <data
                    android:host="mobile.twitter.com"
                    android:pathPattern="/..*"
                    android:scheme="https" >
                </data>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name="Settings" />
        <activity android:name="Settings_List" />
        <activity
            android:name="sugtao4423.lod.swipe_image_viewer.ImageFragmentActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:theme="@style/Theme.TranslucentBackground" >
        </activity>
        <activity
            android:name="Show_Video"
            android:configChanges="orientation|screenSize|screenLayout"
            android:theme="@style/Theme.TranslucentBackground" >
        </activity>

        <service android:name="AutoLoadTLService" >
        </service>
    </application>

</manifest>