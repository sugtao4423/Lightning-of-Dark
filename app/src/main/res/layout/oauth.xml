<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartOAuth">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="clickOAuth"
        android:text="@string/layout_oauth_auth" />

    <EditText
        android:id="@+id/editCk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textCk"
        android:layout_alignBottom="@+id/textCk"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textCk"
        android:ems="10"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textCk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="@string/layout_consumer_key" />

    <TextView
        android:id="@+id/textCs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCk"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="@string/layout_consumer_secret" />

    <EditText
        android:id="@+id/editCs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textCs"
        android:layout_alignBottom="@+id/textCs"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textCs"
        android:ems="10"
        android:singleLine="true" />

    <TextView
        android:id="@+id/oauthDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCs"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="clickOAuthDescription" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/layout_oauth_description"
        android:textSize="15sp" />

</RelativeLayout>