<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.net.Uri" />

        <variable
            name="viewModel"
            type="sugtao4423.lod.ui.showvideo.ShowVideoActivityViewModel" />

        <variable
            name="mediaController"
            type="android.widget.MediaController" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mediaController="@{mediaController}"
            app:onCompletionListener="@{(mp) -> viewModel.onVideoComplete(mp)}"
            app:onPreparedListener="@{(mp) -> viewModel.onVideoPrepared(mp)}"
            app:videoURI="@{Uri.parse(viewModel.videoUrl)}" />

    </LinearLayout>
</layout>
