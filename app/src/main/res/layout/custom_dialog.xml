<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListViewListener">

    <ListView
        android:id="@+id/dialog_List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@xml/dialog_background"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="@string/icon_reply" />

        <Button
            android:id="@+id/dialog_retweet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@xml/dialog_background"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="@string/icon_retweet" />

        <Button
            android:id="@+id/dialog_unofficialRT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@xml/dialog_background"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="@string/icon_quote" />

        <Button
            android:id="@+id/dialog_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@xml/dialog_background"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="@string/icon_star" />

        <Button
            android:id="@+id/dialog_talk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@xml/dialog_background"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="@string/icon_comment" />

        <Button
            android:id="@+id/dialog_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@xml/dialog_background"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            android:text="@string/icon_trash" />
    </LinearLayout>

</LinearLayout>